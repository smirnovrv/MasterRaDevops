&НаКлиенте
Процедура СоздатьДокумент(Команда)
	
	СтруктураПараметров = новый Структура;	
	СтруктураПараметров.Вставить("ВыборкаПлотернаяРезка",Ложь);
	СтруктураПараметров.Вставить("МонтажкаПлотернаяРезка",Ложь);
	СтруктураПараметров.Вставить("ПодВидыРабот","");
	СтруктураПараметров.Вставить("ВидыРабот","");
	
	Если Печать Тогда 
		СтруктураПараметров.Вставить("ВидыРабот","СобственнаяПечать");
	ИначеЕсли Изготовление Тогда 
		СтруктураПараметров.Вставить("ВидыРабот","Изготовление");
		Если Сборка Тогда  
			СтруктураПараметров.Вставить("ПодВидыРабот","Сборка");
		ИначеЕсли ПлотернаяРезка Тогда  
			СтруктураПараметров.Вставить("ПодВидыРабот","ПлотернаяРезка");	
			Если Выборка Тогда  
				СтруктураПараметров.Вставить("ВыборкаПлотернаяРезка",Истина);
			КонецЕсли;
			Если Монтажка Тогда 
				СтруктураПараметров.Вставить("МонтажкаПлотернаяРезка",Истина);
			КонецЕсли;
		ИначеЕсли Ламинация Тогда  
			СтруктураПараметров.Вставить("ПодВидыРабот","Ламинация");
		ИначеЕсли Окраска Тогда  
			СтруктураПараметров.Вставить("ПодВидыРабот","Окраска");	
		ИначеЕсли Резка Тогда  
			СтруктураПараметров.Вставить("ПодВидыРабот","Резка");			
		КонецЕсли;	
	ИначеЕсли Монтаж Тогда 
		СтруктураПараметров.Вставить("ВидыРабот","Монтаж");
	ИначеЕсли Дизайн Тогда   
		СтруктураПараметров.Вставить("ВидыРабот","Дизайн");	
	ИначеЕсли Доставка Тогда 
		СтруктураПараметров.Вставить("ВидыРабот","Доставка");
	ИначеЕсли ПродажаМатериаловЗаказчику Тогда 
		СтруктураПараметров.Вставить("ВидыРабот","Продажа");
	ИначеЕсли Накатка Тогда 
		СтруктураПараметров.Вставить("ВидыРабот","Накатка");	
	КонецЕсли;	
	
	ОткрытьФорму("Документ.Заявка.ФормаОбъекта",СтруктураПараметров);
	ЭтаФорма.Закрыть();

КонецПроцедуры

