    ОблШапкаДокумента.Параметры.ДатаПо 		= Формат(Период.ДатаОкончания, "ДФ=dd.MM.yyyy");
	ТабДокумент.Вывести(ОблШапкаДокумента);
	ТабДокумент.Вывести(ОблШапка);
		
	ВывестиОстатокДСфакт(ОблШапкаПоступления, Период.ДатаНачала);
